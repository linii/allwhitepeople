{
  "manifest_version": 2,

  "name": "All White People",
  "description": "racebending the internet, one word at a time!",
  "version": "1.0",

  "permissions": [
    "http://*/*", "https://*/*"
  ]

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["myscript.js"],
      "run_at": "document_end"
    }
  ]

  "browser_action": {
    "default_icon": "icon.png", // replace this with appropriate stuff
  }
}
